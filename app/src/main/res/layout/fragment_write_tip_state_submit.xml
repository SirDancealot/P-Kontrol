<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".UI.WriteTip.Stage_WriteText"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Thanks for Contributing -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="@color/colorSecondary"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        >

        <!-- Title  -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"

            android:fontFamily="@font/ubuntu_regular"
            android:gravity="center"
            android:text="Submit Contribution"
            android:textColor="@color/color_matBlack"
            android:textSize="18sp"

            />
        <!-- Submit Button -->
        <Button
            android:id="@+id/WriteTip_SubmitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginStart="55dp"
            android:layout_marginEnd="55dp"

            android:drawableLeft="@drawable/ic_button_partcheckmark"
            android:background="@drawable/shape_buttonstyle_02"
            android:layout_gravity="center"
            android:text="submit"
            android:textColor="@color/color_lightGray"
            style="?android:attr/buttonStyleToggle"
            />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>