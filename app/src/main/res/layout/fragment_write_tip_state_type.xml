<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".UI.WriteTip.WriteTipState_Type"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Select Type  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="@color/colorSecondary"
        android:id="@+id/WriteTip_TypeLayout"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        >

        <!-- Title  -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"

            android:fontFamily="@font/ubuntu_regular"
            android:gravity="center"
            android:text="@string/writeTip_type_contribution"
            android:textColor="@color/color_matBlack"
            android:textSize="18sp"

            />
        <!-- Select Types -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/WriteTip_TipCategory_free"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_height="40dp"
                android:layout_width="200dp"
                android:layout_gravity="center"

                android:drawableLeft="@drawable/ic_button_part_tiptype_freepark"
                android:background="@drawable/shape_buttonstyle_02"
                android:textAllCaps="false"
                android:text="Free Parking Tip"
                android:textColor="@color/color_lightGray"
            />
            <Button
                android:id="@+id/WriteTip_TipCategory_paid"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_height="40dp"
                android:layout_width="200dp"
                android:layout_gravity="center"

                android:drawableLeft="@drawable/ic_button_part_tiptype_paid"
                android:background="@drawable/shape_buttonstyle_02"
                android:textAllCaps="false"
                android:text="Paid Parking Tip"
                android:textColor="@color/color_lightGray"
            />
            <Button
                android:id="@+id/WriteTip_TipCategory_warning"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_height="40dp"
                android:layout_width="200dp"
                android:layout_gravity="center"

                android:drawableLeft="@drawable/ic_button_part_tiptype_alarm"
                android:background="@drawable/shape_buttonstyle_02"
                android:textAllCaps="false"
                android:text="Warning Tip"
                android:textColor="@color/color_lightGray"
            />



        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>