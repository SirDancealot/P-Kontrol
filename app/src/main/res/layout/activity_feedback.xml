<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7DCBED"
    tools:context=".UI.Feedback.ActivityFeedback">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@drawable/loginscreen_header_background"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="117dp"
            android:gravity="center"
            android:text="Please provide us with feedback!"
            android:textColor="#FFFFFF"
            android:textSize="22dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="410dp"
        android:layout_height="539dp"
        android:layout_marginStart="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="Kategori"
            android:textColor="#696969"
            android:textSize="18sp"
            tools:textStyle="bold" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#FFFFFF">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border">

                <Spinner
                    android:id="@+id/feedbackDropDownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:spinnerMode="dropdown"
                    android:textColor="#838383"
                    android:textSize="18sp"
                    tools:textStyle="bold" />
            </TableRow>
        </TableRow>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="Feedback besked"
            android:textColor="#696969"
            android:textSize="18sp"
            tools:textStyle="bold" />

        <EditText
            android:id="@+id/feedbackEditText"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:background="@drawable/border"
            android:ems="10"
            android:hint="Please write your feedback here"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:textColor="#696969"
            android:textSize="18sp"
            tools:textStyle="bold" />

        <Button
            android:id="@+id/feedbackButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send feedback"
            android:textColor="#535353"
            android:textSize="18sp"
/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>