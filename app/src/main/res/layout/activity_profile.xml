<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ActivityProfile">

    <ImageView
        android:id="@+id/profilePicImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        app:layout_constraintBottom_toTopOf="@+id/nameTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileTextView"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="61dp"
        android:fontFamily="@font/ubuntu_regular"
        android:text="[name]"
        app:layout_constraintBottom_toTopOf="@+id/numberOfTipsTextView"
        app:layout_constraintStart_toStartOf="@+id/profilePicImageView"
        app:layout_constraintTop_toBottomOf="@+id/profilePicImageView" />

    <TextView
        android:id="@+id/profileTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="29dp"
        android:layout_marginBottom="45dp"
        android:fontFamily="@font/ubuntu_bold"
        android:text="Profile"
        app:layout_constraintBottom_toTopOf="@+id/profilePicImageView"
        app:layout_constraintStart_toStartOf="@+id/profilePicImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/numberOfTipsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="21dp"
        android:fontFamily="@font/ubuntu_regular"
        android:text="Number of tips: [nrOfTips]"
        app:layout_constraintBottom_toTopOf="@+id/numberOfLikesTextView"
        app:layout_constraintStart_toStartOf="@+id/numberOfLikesTextView"
        app:layout_constraintTop_toBottomOf="@+id/nameTextView" />

    <TextView
        android:id="@+id/numberOfLikesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="73dp"
        android:fontFamily="@font/ubuntu_regular"
        android:text="Number of likes: [nrOfLikes]"
        app:layout_constraintBottom_toTopOf="@+id/mostRecentTipFrameLayout"
        app:layout_constraintEnd_toEndOf="@+id/profileTextView"
        app:layout_constraintStart_toStartOf="@+id/mostRecentTipTextView"
        app:layout_constraintTop_toBottomOf="@+id/numberOfTipsTextView" />

    <TextView
        android:id="@+id/seeYourTipsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/ubuntu_italic"
        android:text="See all your tips"
        app:layout_constraintStart_toStartOf="@+id/mostRecentTipFrameLayout"
        app:layout_constraintTop_toBottomOf="@+id/mostRecentTipFrameLayout" />

    <TextView
        android:id="@+id/mostRecentTipTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/ubuntu_regular"
        android:text="Most recent tip:"
        app:layout_constraintBottom_toTopOf="@+id/mostRecentTipFrameLayout"
        app:layout_constraintStart_toStartOf="@+id/mostRecentTipFrameLayout" />

    <FrameLayout
        android:id="@+id/mostRecentTipFrameLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberOfLikesTextView">

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>