<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Fragments.FragBottomMenu"
    >

    <!-- Dragging Handle -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <FrameLayout
            android:id="@+id/menuBtn_draggingHandle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView

                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginLeft="160dp"

                android:layout_marginRight="160dp"
                android:background="@drawable/menu_shape_handle"
                app:srcCompat="?attr/actionModePasteDrawable" />
        </FrameLayout>

    </LinearLayout>
    <!-- Container of All Menu Buttons -->
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_shape_container"
        android:paddingTop="15dp"
        android:showDividers="middle"
        android:stretchColumns="*"
        >
        <TableRow>
            <!-- profile btn -->
            <Button
                android:onClick="menuBtn_profile"
                android:id="@+id/menuBtn_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableTop="@mipmap/ic_launcher"
                android:text="Profile"
                android:textAllCaps="false" />
            <!-- Free Park btn -->
            <Button
                android:onClick="menuBtn_FreePark"
                android:id="@+id/menuBtn_FreePark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableTop="@mipmap/ic_launcher"
                android:text="Free Park"
                android:textAllCaps="false" />
            <!-- Contribute btn -->
            <Button
                android:onClick="menuBtn_Contribute"
                android:id="@+id/menuBtn_Contribute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableTop="@mipmap/ic_launcher"
                android:text="Contribute"
                android:textAllCaps="false" />
        </TableRow>

        <TableRow>
            <!-- Community btn -->
            <Button
                android:onClick="menuBtn_Community"
                android:id="@+id/menuBtn_Community"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableTop="@mipmap/ic_launcher"
                android:text="Community"
                android:textAllCaps="false" />
            <!-- Free Park btn -->
            <Button
                android:onClick="menuBtn_ParkAlarm"
                android:id="@+id/menuBtn_ParkAlarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableTop="@mipmap/ic_launcher"
                android:text="Park Alarm"
                android:textAllCaps="false" />
            <!-- Park Alarm btn -->
            <Button
                android:onClick="menuBtn_PVagt"
                android:id="@+id/menuBtn_PVagt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableTop="@mipmap/ic_launcher"
                android:text="P-Vagt"
                android:textAllCaps="false" />
        </TableRow>

    </TableLayout>

</LinearLayout>