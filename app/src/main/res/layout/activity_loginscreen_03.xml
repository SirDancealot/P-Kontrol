<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.LogIn.Activity_LoginScreen_01"
    android:orientation="vertical"
    >

    <!-- Top Shape Container -->
    <LinearLayout
        android:id="@+id/LoginScreen_BackgroundBlue"
        android:transitionName="LoginScreen_BackgroundBlue"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:paddingBottom="25dp"

        android:background="@drawable/loginscreen_header_background"
        android:gravity="center"
        android:orientation="vertical"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <!-- Logo Container -->
        <LinearLayout
            android:id="@+id/LoginScreen_3_LogoContainer"
            android:transitionName="LoginScreen_LogoContainer"

            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_app_logo"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text="Stress-free parking Together"
                android:textAlignment="center"
                android:textColor="@color/color_pureWhite"
                android:textSize="22dp"

                />

        </LinearLayout>

    </LinearLayout>


    <!-- Text inputs    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_marginBottom="25dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/LoginScreen_3_FormEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="15dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="#ADEEE3"
            android:textStyle="bold"

            />

        <EditText
            android:id="@+id/LoginScreen_3_FormPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:hint="Password"
            android:inputType="textPassword"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/LoginScreen_3_FormForgottenPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot password?"

            />
    </LinearLayout>



    <!-- Login Buttons  -->
    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/LoginScreen_3_SignIn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"

            android:background="@drawable/custom_login_button"
            android:text="@string/common_signin_button_text"
            android:textColor="#FFF" />

        <TextView
            android:id="@+id/LoginScreen_3_SignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="Don't have an account? Sign up"
            android:layout_marginBottom="35dp"
            />

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <com.facebook.login.widget.LoginButton
                android:id="@+id/LoginScreen_3_SignIn_FaceBook"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginBottom="30dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp" />
        </LinearLayout>


        <com.google.android.gms.common.SignInButton
            android:id="@+id/LoginScreen_3_SignIn_Google"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
             />


        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone"/>

    </LinearLayout>
    </LinearLayout>