<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="UI.WriteTip.FragMessageWrite"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Write Tip -->
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="75dp"
        android:background="@drawable/writetip_navbar_top_shape"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <!-- Title  -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"

            android:fontFamily="@font/ubuntu_regular"
            android:gravity="center"
            android:text="@string/writeTip_title_step2"
            android:textColor="@color/color_matBlack"
            android:textSize="24sp"

            />
        <!-- Categories  -->
        <Spinner
            android:id="@+id/WriteTip_CategorySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"

            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"

            />
        <!-- Write Tip -->
        <EditText
            android:id="@+id/WriteTip_TextInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"

            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/color_matWhite"

            android:ems="10"
            android:hint="Leave a comment..."
            android:inputType="textMultiLine"
            android:minHeight="75dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>