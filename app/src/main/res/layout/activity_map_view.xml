<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".UI.MainMenuActivity"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!-- Layers such that elements can lie ontop of others -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Map -->
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".UI.Activities.MapsActivity" />

        <!-- Upper UI -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/fragContainer_menu"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:background="@drawable/shape_squarerounded_full"
                >
                <!-- MAP Cancel Tip location Button -->
                <Button
                    android:id="@+id/map_cancelBtn"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="55dp"
                    android:visibility="visible"
                    android:background="@drawable/ic_button_chrossmark"
                    />
                <!-- MAP Confirm Tip location Button -->
                <Button
                    android:id="@+id/map_acceptBtn"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:visibility="visible"
                    android:background="@drawable/ic_button_checkmark"
                    />
            </LinearLayout>

            <!-- MAP center on Location Button -->
            <Button
                android:id="@+id/Map_centerBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_button_map_center"

                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toTopOf="@id/fragContainer_menu"
                app:layout_constraintEnd_toEndOf="parent"
                android:transitionName="MapCenterButon"
                />
            <!-- top message box -->
          <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                  <!--<include layout="@layout/fragment_top_message_bar" />
-->
              <FrameLayout
                  android:id="@+id/midScreenFragmentContainer"
                  android:name="com.example.p_kontrol.Fragments.FragMessageWrite"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

              </FrameLayout>

          </FrameLayout>


            <!-- Drag Menu Container -->
            <FrameLayout
                android:id="@+id/fragContainer_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <include layout="@layout/include_bottom_menu" />

            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- EvenHigher UI -->
        <!-- tip bobble-->
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager_TipBobbles"
            android:name="com.example.p_kontrol.Fragments.FragTipBobble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <!-- Write Tip  -->


    </androidx.constraintlayout.widget.ConstraintLayout>





</LinearLayout>